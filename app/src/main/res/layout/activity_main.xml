<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/entire_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:weightSum="1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp">


        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="0.11">
            <ImageView
                    android:layout_weight="0.33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/blank" android:id="@+id/imageView1"/>
            <ImageView
                    android:layout_weight="0.33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/blank" android:id="@+id/imageView2"/>
            <ImageView
                    android:layout_weight="0.33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/blank"
                    android:id="@+id/imageView3"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="0.11" android:layout_marginTop="16dp">
            <ImageView
                    android:layout_weight="0.33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/blank"
                    android:id="@+id/imageView4"/>
            <ImageView
                    android:layout_weight="0.33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/blank"
                    android:id="@+id/imageView5"/>
            <ImageView
                    android:layout_weight="0.33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/blank"
                    android:id="@+id/imageView6"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="0.11" android:layout_marginTop="16dp">
            <ImageView
                    android:layout_weight="0.33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/blank"
                    android:id="@+id/imageView7"/>
            <ImageView
                    android:layout_weight="0.33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/blank"
                    android:id="@+id/imageView8"/>
            <ImageView
                    android:layout_weight="0.33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/blank"
                    android:id="@+id/imageView9"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>